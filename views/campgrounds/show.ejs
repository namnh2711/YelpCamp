<% include ../partials/header.ejs %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">YelpCamp</p>
      <div class="list-group">
        <li class="list-group-item active">Item 1</li>
        <li class="list-group-item">Item 2</li>
        <li class="list-group-item">Item 3</li>
      </div>
    </div>
    <div class="col-md-9">
      <div class="thumbnail">
        <img src="<%= camp.src %>" alt="" class="img-responsive">
        <div class="caption">
          <h4 class="pull-right">$9.00/night</h4>
          <h4>
            <a href=""><%= camp.name %></a>
          </h4>
          <p><%= camp.description %></p>
          <p><em>Submitted by <%= camp.author.username %></em></p>
          <a href="/campgrounds/<%=  camp._id %>/edit" class="btn btn-warning btn-xs">Edit</a>
          <form action="/campgrounds/<%= camp._id %>?_method=DELETE" method="POST" id="delete-form">
            <button class="btn btn-danger btn-xs">Delete</button>
          </form>
        </div>
      </div>
      <div class="well">
        <div class="text-right">
          <a href="/campgrounds/<%= camp._id %>/comments/new" class="btn btn-primary">Add new comment</a>
        </div>
        <hr>
        <% camp.comments.forEach(function(comment) { %>
          <div class="row">
            <div class="col-md-12">
              <p>
                <strong><%= comment.author.username %></strong>
                <span class="pull-right">
                  10 days ago
                </span>
              </p>
              <p><%= comment.text %></p>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer.ejs %>