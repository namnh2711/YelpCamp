<% include ../partials/header %>
    <div class="container">
        <div class="row">
            <h1 class="text-center">Edit campground <%= camp.name %></h1>

            <form style="width: 30%; margin: 25px auto;" action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[name]" value="<%= camp.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[src]" value="<%= camp.src %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[description]" value="<%= camp.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit!</button>
                </div>
                <a href="/campgrounds">Go Back</a>
            </form>

        </div>
    </div>
<% include ../partials/footer %>